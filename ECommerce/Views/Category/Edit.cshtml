@model ModelClasses.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5 d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white text-center">
                <h2>Edit Category</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Category Name Input -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Hidden field for Category Id -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Submit and Cancel buttons -->
                    <div class="d-grid">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
