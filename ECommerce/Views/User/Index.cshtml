@model IEnumerable<ModelClasses.ApplicationUser>

<h2>User List</h2>
@{
    ViewData["Title"] = "User List";
}

<style>
    .custom-btn-color {
        background-color: #4A628A;
        border-color: #4A628A;
        color: white;
    }

        .custom-btn-color:hover {
            background-color: #B9E5E8;
            border-color: #7AB2D3;
        }
</style>

<a asp-action="Create" class="btn btn-success mb-3 custom-btn-color">Create New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Address</th>
            <th>Username</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.City</td>
                <td>@user.Address</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this User?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
